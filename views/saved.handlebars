<script type="text/javascript">

$(document).on("click", "#saved-article", function(){

    var Articleid = $(this).attr("data-id");

    console.log(Articleid)

    $.ajax({
        method: "POST",
        url: "/delete/" + Articleid,
        data: {
            id: Articleid
        }
    }).done(function(data) {
        location.reload();
    });
})

</script>